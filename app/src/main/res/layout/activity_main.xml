<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jmm.bc2c.MainActivity"
    android:background="#212121">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/buttonCamera"
            android:onClick="useCamera"
            android:layout_weight="1"
            android:src="@drawable/ic_camera"
            android:scaleType="fitCenter"
            android:layout_marginBottom="12dp" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/buttonBrowse"
            android:layout_weight="1"
            android:onClick="browsePictures"
            android:src="@drawable/ic_gallery"
            android:scaleType="fitCenter"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:layout_marginBottom="12dp" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonInstructions"
            android:onClick="getInstructions"
            android:src="@drawable/ic_instructions"
            android:scaleType="center" />
    </LinearLayout>

</RelativeLayout>
